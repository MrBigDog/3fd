        <container>
            <entry guid="163bcc30e2e94f0b961da3e9fdb788a3" name="tiff"/>
            <!-- this entry is to make JPEG XR metadata be handled like TIFF -->
            <entry guid="57a37caa367a4540916bf183c5093a4b" name="tiff"/>
            <entry guid="19e4a5aa56624fc5a0c01758028e1057" name="jpeg"/>
