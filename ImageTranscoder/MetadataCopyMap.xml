        </metadata>
    </formats>

    <!-- How to copy metadata in several cases of one container type to another -->
    <map>
        <case srcFormat="tiff" destFormat="jpeg">
            <entry metaFormat="IFD"  fromPath="/ifd/*"                   toPath="/app1/ifd/*"                copyAllItems="false"/>
            <entry metaFormat="IFD"  fromPath="/ifd/thumb/*"             toPath="/app1/thumb/*"              copyAllItems="true"/>
            <entry metaFormat="XMP"  fromPath="/ifd/xmp/*"               toPath="/xmp/*"                     copyAllItems="false"/>
            <entry metaFormat="EXIF" fromPath="/ifd/exif/*"              toPath="/app1/ifd/exif/*"           copyAllItems="false"/>
            <entry metaFormat="IPTC" fromPath="/ifd/irb/8bimiptc/iptc/*" toPath="/app13/irb/8bimiptc/iptc/*" copyAllItems="true"/>
        </case>
        <case srcFormat="jpeg" destFormat="tiff">
            <entry metaFormat="IFD"  fromPath="/app1/ifd/*"                toPath="/ifd/*"                   copyAllItems="false"/>
            <entry metaFormat="IFD"  fromPath="/app1/*"                    toPath="/ifd/*"                   copyAllItems="false"/>
            <entry metaFormat="IFD"  fromPath="/app1/thumb/*"              toPath="/ifd/thumb/*"             copyAllItems="true"/>
            <entry metaFormat="XMP"  fromPath="/xmp/*"                     toPath="/ifd/xmp/*"               copyAllItems="false"/>
            <entry metaFormat="EXIF" fromPath="/app1/ifd/exif/*"           toPath="/ifd/exif/*"              copyAllItems="false"/>
            <entry metaFormat="IPTC" fromPath="/app13/irb/8bimiptc/iptc/*" toPath="/ifd/irb/8bimiptc/iptc/*" copyAllItems="true"/>
        </case>
    </map>

